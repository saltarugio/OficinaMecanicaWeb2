@model OficinaMecanica.Models.POJO.Cliente
@{
    ViewData["Title"] = "Editar Cliente";
}
<link rel="stylesheet" href="~/css/forms.css"/>
<form action="" method="post">
    <h1>@ViewData["Title"]</h1>
    <div class="form-group">
        <input type="hidden" class="form-control" name="idCliente" value="@Model.idCliente" disabled>
        <label for="nome">Nome do Cliente</label>
        <input type="text" class="form-control" id="nomeCliente" name="nomeCliente" value="@Model.nomeCliente" disabled>
        
        <label for="cnpj">CNPJ</label>
        <input type="text" class="form-control" id="cnpj" name="cnpj" placeholder="Digite o cnpj.." value="@Model.cnpj" disabled>
        
        <input type="hidden" class="form-control" id="cpf" name="cpf" value="@Model.cpf" disabled>
        <script>
            // Verifique o estado atual dos radio buttons
            var cpf = document.getElementById("cpf");

            // Defina o valor inicial com base no radio button selecionado
            cpf = "juridica"

            // Adicione um evento para atualizar o valor quando os radio buttons forem alterados
            document.getElementById("cpf").value = cpf;
        </script>

        <label for="email">email</label>
        <input type="email" class="form-control" id="email" name="email" value="@Model.email" disabled>
        
        <label for="telefone">telefone</label>
        <input type="tel" class="form-control" id="telefone" name="telefone" value="@Model.telefone" disabled>
        
        <label for="celular">celular</label>
        <input type="tel" class="form-control" id="nomeClcelulariente" name="celular" value="@Model.celular" disabled>

        <label for="cep">cep</label>
        <input type="text" class="form-control" id="cep" name="cep" value="@Model.cep" disabled>
       
        <label for="uf">Estado</label>
        <select id="uf" name="uf" class="form-control" value="@Model.uf" disabled>
            <option value="">Selecione um estado</option>
            <option value="AC">Acre</option>
            <option value="AL">Alagoas</option>
            <option value="AP">Amapá</option>
            <option value="AM">Amazonas</option>
            <option value="BA">Bahia</option>
            <option value="CE">Ceará</option>
            <option value="DF">Distrito Federal</option>
            <option value="ES">Espírito Santo</option>
            <option value="GO">Goiás</option>
            <option value="MA">Maranhão</option>
            <option value="MT">Mato Grosso</option>
            <option value="MS">Mato Grosso do Sul</option>
            <option value="MG">Minas Gerais</option>
            <option value="PA">Pará</option>
            <option value="PB">Paraíba</option>
            <option value="PR">Paraná</option>
            <option value="PE">Pernambuco</option>
            <option value="PI">Piauí</option>
            <option value="RJ">Rio de Janeiro</option>
            <option value="RN">Rio Grande do Norte</option>
            <option value="RS">Rio Grande do Sul</option>
            <option value="RO">Rondônia</option>
            <option value="RR">Roraima</option>
            <option value="SC">Santa Catarina</option>
            <option value="SP">São Paulo</option>
            <option value="SE">Sergipe</option>
            <option value="TO">Tocantins</option>
        </select>
        <script>
            // Obtenha o valor do estado do modelo
            var estadoSelecionado = "@Model.uf";

            // Selecione o estado correto no dropdown
            var select = document.getElementById("uf");
            for (var i = 0; i < select.options.length; i++) {
                if (select.options[i].value === estadoSelecionado) {
                    select.selectedIndex = i;
                    break;
                }
            }
        </script>
        <label for="cidade">cidade</label>
        <input type="text" class="form-control" id="cidade" name="cidade" value="@Model.cidade" disabled>
        
        <label for="bairro">bairro</label>
        <input type="text" class="form-control" id="bairro" name="bairro" value="@Model.bairro" disabled>
        
        <label for="rua">rua</label>
        <input type="text" class="form-control" id="rua" name="rua" value="@Model.rua" disabled>

        <label for="numero">numero</label>
        <input type="text" class="form-control" id="numero" name="numero" value="@Model.numero" disabled>

        <label for="dataNascimento">Data de Nascimento</label>
        <input type="text" class="form-control" id="dataNascimento" name="dataNascimento" value="@Model.dataNascimento" disabled>

        <label for="dataAtual">Data do Cadastro</label>
        <input type="text" class="form-control" id="dataCadastro" name="dataCadastro" value="@Model.dataCadastro" disabled>
    </div>
    <div class="custom-control custom-radio">
        <input type="radio" id="masculino" name="customRadio" class="custom-control-input" value="masculino" disabled>
        <label class="custom-control-label" for="customRadio1" disabled>Masculino</label>
    </div>
    <div class="custom-control custom-radio">
        <input type="radio" id="feminino" name="customRadio" class="custom-control-input" value="feminino" disabled>
        <label class="custom-control-label" for="customRadio2" disabled>Feminino</label>
    </div>
    <!-- Adicione um input hidden para armazenar o valor selecionado do radio button -->
    <input type="hidden" id="sexo" name="sexo" disabled>

    <!-- JavaScript para atualizar o valor do input hidden com o radio button selecionado -->
    <script>
        var masculinoRadio = document.getElementById("masculino");
        var femininoRadio = document.getElementById("feminino");

        if (@Model.sexo == "masculino") {
            masculinoRadio.checked = true;
            femininoRadio.checked = false;
        } else if (@Model.sexo == "feminino") {
            masculinoRadio.checked = false;
            femininoRadio.checked = true;
        }
    </script>

    </script>
    <div class="form-check">
        <input type="checkbox" class="form-check-input" id="status1" disabled>
        <input type="hidden" id="status" name="status" disabled />
        <label class="form-check-label" for="status" disabled>Ativo</label>
    </div>
    <script>
        if (@Model.status == 0) {
            document.getElementById("status1").checked = true;
        } if (@Model.status == 1) {
            document.getElementById("status1").checked = false;
        }
    </script>


    <div class="row " role="group">
        <div class="d-grid gap-2">
            <a asp-action="Visualizacao" type="button" class="btn btn-secondary">Voltar</a>
        </div>
    </div>
</form>
